<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tvy.slekret.NoteActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/slekretColor"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/button_bar"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:text="Cancel"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"
            android:clickable="true" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note 1"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_bar"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Save"
            android:textAllCaps="false"
            android:layout_marginRight="1dp"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/functionsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/slekretColor">

        <Button
            android:id="@+id/btnPaint"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:text="Paint"
            android:textAllCaps="false"
            android:drawableLeft="@mipmap/ic_brush_black_18dp"
            android:textSize="11dp"/>
        <Button
            android:id="@+id/btnText"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:text="Text"
            android:textAllCaps="false"
            android:drawableLeft="@mipmap/ic_title_black_18dp"
            android:textSize="11dp"/>
        <Button
            android:id="@+id/btnImage"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:text="Image"
            android:textAllCaps="false"
            android:drawableLeft="@mipmap/ic_image_black_18dp"
            android:textSize="11dp" />
        <Button
            android:id="@+id/btnCamera"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:text="Camera"
            android:textAllCaps="false"
            android:drawableLeft="@mipmap/ic_camera_alt_black_18dp"
            android:textSize="11dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/formatTextBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/slekretColor"
        android:orientation="horizontal"
        android:paddingTop="7.5dp"
        android:paddingLeft="10dp">

        <Button
            android:id="@+id/btnCheckFormatText"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/check_selector"
            style="?android:borderlessButtonStyle" />

        <Button
            android:id="@+id/btnBold"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/ic_format_bold_black_18dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/btnItalic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/ic_format_italic_black_18dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/btnUnderline"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/ic_format_underlined_black_18dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/btnStrike"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/ic_format_strikethrough_black_18dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/btnIncreaseTextSize"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/increase_text_selector"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/btnDecreaseTextSize"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/decrease_text_selector"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/btnAlignLeft"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/ic_format_align_left_black_18dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/btnAlignCenter"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/ic_format_align_center_black_18dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/btnAlignRight"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/ic_format_align_right_black_18dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/colorPickerBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="7.5dp"
        android:background="@color/slekretColor">
        <Button
            android:id="@+id/btnBackFromColor"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@mipmap/ic_keyboard_arrow_left_black_18dp"
            style="?android:borderlessButtonStyle"/>

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/color_blue_circle"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/color_blue_circle"
            android:layout_marginLeft="15dp"/>

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/color_blue_circle"
            android:layout_marginLeft="15dp"/>

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/color_blue_circle"
            android:layout_marginLeft="15dp"/>

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/color_blue_circle"
            android:layout_marginLeft="15dp"/>

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/color_blue_circle"
            android:layout_marginLeft="15dp"/>

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/color_blue_circle"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/resizeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/slekretColor">

        <Button
            android:id="@+id/btnDone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/check_selector" />

        <Button
            android:id="@+id/btnSmaller"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Smaller"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.3"
            android:drawableLeft="@mipmap/ic_arrow_drop_down_black_18dp"/>

        <Button
            android:id="@+id/btnBigger"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Bigger"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.3"
            android:drawableLeft="@mipmap/ic_arrow_drop_up_black_18dp"/>

        <Button
            android:id="@+id/btnFitScreen"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Fit Screen"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.3"
            android:drawableLeft="@mipmap/ic_fullscreen_black_18dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layoutForNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
